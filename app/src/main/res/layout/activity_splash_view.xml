<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    android:padding="@dimen/padding_large"
    tools:context=".SplashView">

    <!-- Espacio superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/padding_medium">

        <!-- Logo Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="80dp"
            app:cardElevation="@dimen/elevation_high"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="@dimen/margin_large">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_logo"
                android:scaleType="centerCrop"
                android:contentDescription="@string/desc_imagen_logo" />

        </androidx.cardview.widget.CardView>

        <!-- TÃ­tulo -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_large"
            app:cardElevation="@dimen/elevation_high"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:id="@+id/tvSplashTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/splash_titulo"
                android:textSize="@dimen/text_size_xxlarge"
                android:textColor="@color/azul"
                android:textStyle="bold"
                android:padding="@dimen/padding_xlarge"
                android:minWidth="200dp"
                android:gravity="center" />

        </androidx.cardview.widget.CardView>

        <!-- Texto cargando -->
        <TextView
            android:id="@+id/tvCargando"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_cargando"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="@dimen/margin_large" />

    </LinearLayout>

    <!-- Firma del desarrollador -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="@dimen/padding_large">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_medium"
            app:cardElevation="@dimen/elevation_low"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:id="@+id/devtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dev_by"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/azul"
                android:textStyle="bold|italic"
                android:padding="@dimen/padding_medium" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
