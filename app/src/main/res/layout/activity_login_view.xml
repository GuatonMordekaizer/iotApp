<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    android:padding="@dimen/padding_large"
    android:gravity="center"
    tools:context=".LoginView">

    <!-- Logo o título de la app -->
    <!-- Logo Image -->
    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:cardCornerRadius="80dp"
        app:cardElevation="@dimen/elevation_high"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="@dimen/margin_large">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_logo"
            android:scaleType="centerCrop"
            android:contentDescription="@string/desc_imagen_logo" />

    </androidx.cardview.widget.CardView>


    <!-- Tarjeta principal del formulario -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/corner_radius_large"
        app:cardElevation="@dimen/elevation_high"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_xlarge">

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_subtitulo"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_large" />

            <!-- Campo de usuario -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="@dimen/elevation_low"
                app:cardBackgroundColor="@color/background_gradient_start"
                android:layout_marginBottom="@dimen/margin_medium">

                <EditText
                    android:id="@+id/inputUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/login_hint_usuario"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:padding="@dimen/padding_medium"
                    android:background="@android:color/transparent"
                    android:drawablePadding="@dimen/padding_small"
                    android:autofillHints="username"
                    android:minHeight="56dp" />

            </androidx.cardview.widget.CardView>

            <!-- Campo de contraseña -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="@dimen/elevation_low"
                app:cardBackgroundColor="@color/background_gradient_start"
                android:layout_marginBottom="@dimen/margin_large">

                <EditText
                    android:id="@+id/inputClave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/login_hint_password"
                    android:inputType="textPassword"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:padding="@dimen/padding_medium"
                    android:background="@android:color/transparent"
                    android:drawablePadding="@dimen/padding_small"
                    android:autofillHints="password"
                    android:minHeight="56dp" />

            </androidx.cardview.widget.CardView>

            <!-- Botón de login -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="@dimen/elevation_medium">

                <Button
                    android:id="@+id/botonIniciarSesion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/login_boton_ingresar"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/button_verde"
                    android:contentDescription="@string/desc_boton_login"
                    android:elevation="@dimen/elevation_medium" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
